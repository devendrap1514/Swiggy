<!DOCTYPE html>
<html>
  <head>
    <title>Swiggy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheets" href="style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
      :root{
    --color: #888888;
  }
      #header {
        border:1px solid #000000;
        display: flex;
        justify-content: space-between;
        background: #cbe0b4;
        padding: 6px;
        margin: 0px;
        align-items: center;
      }
      .topnav {
        overflow: hidden;
      }

      .topnav a {
        float: left;
        color: black;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
      }

      .topnav a:hover {
        background-color: #ddd;
        color: black;
      }

      .home-profile_pic{
      }
      .custom-hover{

      }
      .custom-hover:hover {
        transition: 0.4s;
        box-shadow: 0 8px 16px 0 #888888;
      }
      .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
      }
      .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
      }
      .dropdown:hover .dropdown-content {display: block;}
    </style>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if current_user %>
      <header id="header">
        <div class="topnav">
          <%= link_to "HOME", api_v1_restaurant_dishes_path %>
          <%= link_to "DISHES", api_v1_dishes_path %>
          <%= link_to "RESTAURANT", api_v1_restaurants_path %>
          <%= link_to "CHAT ROOM", api_v1_messages_path %>
        </div>

        <div>
          <div class="dropdown">
            <button class="dropbtn">OPTION ></button>
            <div class="dropdown-content">
              <% if current_user.type == "Customer" %>

                <%= link_to "CART", api_v1_cart_path, method: :get  %>
                <%= link_to "ORDERS", api_v1_orders_path, method: :get %>
              </div>
            <% end %>
            </div>
          </div>
          <div class="home-profile_pic">
            <%= link_to api_v1_user_path(current_user) do %>
              <% if current_user.profile_picture.attached? %>
                <%= image_tag(current_user.profile_picture, size: "30x30") %>
              <% else %>
                <%= image_tag("profile_pic.png", size: "30x30") %>
              <% end %>
            <% end %>
          </div>
        </div>
      </header>
    <% end %>

    <br>

    <%= yield %>
    <br>
  </body>
</html>
