<style>
  .grid-container{
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 40px 20px;
    margin-left: 10px;
    margin-right: 10px;
  }
  .grid-item{
    border: 0.5px solid;
    border-radius: 10px;
    padding: 8px;
  }
  .grid-footer{
    margin-top: 20px;
    grid-area: f;
    text-align: center;
  }
  .image{
    width: 100%;
    height: fit-content;
  }
  .dish{
    size: 16px;
    font-weight: bold;
  }
  .category{
    size: 12px;
  }
</style>

<% unless @dishes.empty? %>
  <div class="grid-container">
    <%= render @dishes %>
  </div>
<% else %>
  <div>
    no dish
  </div>
<% end %>
