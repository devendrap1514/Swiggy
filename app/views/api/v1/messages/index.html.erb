<div style="height: 500px;position:relative; border: 1px solid black; border-radius: 10px; padding: 5px; margin: 5px;">
  <div id="messages-container", style="max-height:100%;overflow:auto;">
    <%= render "messages"%>
  </div>
</div>
<button onclick="scrollToBottom()">>>></button>
<%= render "form" %>

<script type="text/javascript">
  function scrollToBottom(){
    var elem = document.getElementById('messages-container');
    elem.scrollTop = elem.scrollHeight
  }
</script>
