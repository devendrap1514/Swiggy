<%= turbo_frame_tag "restaurants" do %>
  <style>
    .container{
      display: flex;
      flex-direction: column;
      gap: 20px;
      margin: 0px 10px;
    }
    .item{
      border: 0.5px solid;
      border-radius: 10px;
      padding: 8px;
      display: flex;
      gap: 20px;
      justify-content: space-between;
    }
    .grid-footer{
      margin-top: 20px;
      grid-area: f;
      text-align: center;
    }
    .image{
      width: 100%;
      height: fit-content;
    }
    .dish{
      size: 16px;
      font-weight: bold;
    }
    .category{
      size: 12px;
    }
  </style>

  <div class="container">
    <%= render @restaurants %>
  </div>

  <div align="center", style="margin: 20px 0px 0px 0px">
    <%= paginate @restaurants %>
  </div>
<% end %>
