
<%= render "api/v1/shared/search", locals: { path: api_v1_restaurants_path, is_show_status: true } %>

<%= button_to "New Restaurant", new_api_v1_restaurant_path, method: :get %>
<br>
<style>
  .container{
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin: 0px 10px;
  }
  .item{
    border: 0.5px solid;
    border-radius: 10px;
    padding: 8px;
    display: flex;
    gap: 20px;
    justify-content: space-between;
  }
  .grid-footer{
    margin-top: 20px;
    grid-area: f;
    text-align: center;
  }
  .image{
    width: 100%;
    height: fit-content;
  }
  .dish{
    size: 16px;
    font-weight: bold;
  }
  .category{
    size: 12px;
  }
</style>

<div class="container">
  <% @restaurants.each do |restaurant| %>
    <a href="<%= api_v1_restaurant_path(restaurant) %>" class="item custom-hover">
      <div><%=restaurant.restaurant_name %></div>
      <div><%=restaurant.address %></div>
      <div style="color: red;"><%=restaurant.status %></div>
    </a>
  <% end %>
</div>

<div align="center", style="margin: 20px 0px 0px 0px">
  <%= paginate @restaurants %>
</div>
