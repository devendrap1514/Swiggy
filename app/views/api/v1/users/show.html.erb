<style>
  .page{
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }
  .profile_pic{
    display: block;
    float: none;
    text-align: center;
  }
  .profile-card{
    padding: 20px;
    background-color: #cbe0b4;
    border-radius: 10px;
  }
  .shape{
    padding: 11px;
    border-radius: 21px;
    border: 4px solid;
  }
  .button-shape{
    border-radius: 50px;
    padding: 5px 10px;
    background-color: var(--main-color);
  }
  .icon-style{
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .profile-button{
    display: flex;
    justify-content: center;
    margin: 10px 0px 0px 0px;
    gap: 20px;
  }
</style>

<div class="page">
  <div align="center">
    <div class="profile-card">
      <div class="profile_pic">
        <% if current_user.profile_picture.attached? %>
          <%= image_tag(current_user.profile_picture, size: "100x100") %>
        <% else %>
          <%= image_tag("profile_pic.png", size: "100x100") %>
        <% end %>
      </div>
      <div>
        <h2><%= current_user.name %></h2>
        <h2><%= current_user.email %></h2>
        <h2><%= current_user.username %></h2>
        <h2><%= current_user.type %></h2>
      </div>
    </div>
    <div class="profile-button">
      <%= button_to "EDIT PROFILE", edit_user_registration_path, method: :get, class: "button-shape" %>
      <%= button_to "SIGNOUT", destroy_user_session_path, method: :delete, class: "button-shape" %>
    </div>
  </div>
  <% if @current_user.type == "Customer" %>
    <div class="icon-style">
      <div class="shape">
        <%= link_to image_tag("shopping-cart.png", size: "50x50"), api_v1_cart_path, method: :get %>
      </div>
      <div  class="shape">
        <%= link_to image_tag("purchase-order.png", size: "50x50"), api_v1_orders_path, method: :get %>
      </div>
    </div>
  <% end %>
</div>
<br>
